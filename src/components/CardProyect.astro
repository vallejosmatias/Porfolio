---
import Button from "./Button.astro";
const { image, title, description,target, url } = Astro.props;
---

<div class="flex flex-col gap-5 bg-black bg-opacity-40 p-5 rounded-2xl">
    <div class="rounded-2xl overflow-hidden">
        <img src={image} alt={title} />
    </div>
    <div class="px-3">
        <h3 class="text-xl text-center mb-4">{title}</h3>
        <p class="text-xs">{description}</p>
        <div class="flex justify-center p-5">
            <Button href={url} target={target}>Ver Proyecto</Button>
        </div>
    </div>
</div>